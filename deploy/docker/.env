# MinIODB 单节点模式环境变量配置

# =============================================================================
# 基础配置
# =============================================================================

# 运行环境
MINIODB_ENV=development

# 日志级别
MINIODB_LOG_LEVEL=info

# =============================================================================
# MinIO 主存储配置（单节点模式唯一依赖）
# =============================================================================

# MinIO 管理员账号
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MinIO 服务配置
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# 主存储桶名称
MINIO_BUCKET=miniodb-data

# =============================================================================
# 认证配置
# =============================================================================

# 认证模式
AUTH_MODE=jwt

# JWT 密钥
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT 过期时间
JWT_EXPIRATION=24h

# =============================================================================
# 缓冲区配置
# =============================================================================

# 缓冲区大小 (条数)
BUFFER_SIZE=1000

# 缓冲区超时时间
BUFFER_TIMEOUT=30s

# 批处理大小
BATCH_SIZE=100

